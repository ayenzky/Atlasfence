@import '_settings'

normalize-css()
base()

body
  padding: 0px

#wrapper
  text-align:center
  background: url(../img/bg-pattern.png) repeat top left
  position:fixed
  top:0px
  width:100%
  color:#fff
  height:100%
  font-family:"Helvetica", Arial
  line-height:1.6
 

#wrapper .main_content
  position:relative
  padding:100px 50px

  @media (max-width:800px)
    padding:100px 25px
 
#wrapper .main_content p
  font-size:18px

#wrapper .main_content h2
  font-size:56px
  text-transform:uppercase
  margin-bottom: 0px


#wrapper .logo
  box-shadow:0px 0px 10px 0px #f1f1f1;
  width:300px
  margin:0px auto
  padding:15px
  background-color:#fff

#wrapper .uppersection
  margin:0px auto;
  width:60%;
  padding:50px;

  @media (max-width:800px)
    width:100%
    padding:0px


